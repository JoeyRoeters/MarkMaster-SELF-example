{% extends 'base' %}

{% block content %}
<div class="m-8">
    <form method="post">
        <div>
            <label for="name" class="required form-label">
                Naam
            </label>
            <input
                value="{{ exam.name  }}"
                type="text"
                id="name"
                name="name"
                class="form-control form-control-solid" />
        </div>

        <div class="mt-4">
            <label for="description" class="required form-label">
                Beschrijving
            </label>
            <textarea
                type="text"
                id="name"
                name="name"
                class="form-control form-control-solid">
                {{ exam.description }}
            </textarea>
        </div>

        <div class="mt-4">
            <label for="date" class="required form-label">
                Datum
            </label>
            <input
                value="{{ exam.date  }}"
                type="date"
                id="name"
                name="name"
                class="form-control form-control-solid" />
        </div>

        <div class="mt-4 d-flex flex-column">
            <label for="class_ids" class="required form-label">
                Klassen
            </label>
            <select name="class_ids" id="class_ids" multiple>
                {% foreach classes as class %}
                    <option value="{{ class.id }}">{{ class.name }}</option>
                {% endforeach %}
            </select>
        </div>

        <div class="d-flex align-items-center mt-4">
            <button type="submit" class="btn btn-primary">
                Opslaan
            </button>

            {% if failed %}
                <div class="text-danger mx-4">
                    Kon niet opslaan door een fout in de invoer.
                </div>
            {% endif %}
        </div>
    </form>
</div>
{% endblock content %}